<Window x:Class="RCD.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCD"
        mc:Ignorable="d"
        Title="Home" Height="500" Width="900" WindowStyle="None" ResizeMode="NoResize">
    <Grid Background="#ECECEC">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#FAFF00">
            <TextBlock HorizontalAlignment="Center" Foreground="Red" FontSize="30" Margin="40,0,0,0"  VerticalAlignment="Center" >_R-C-D_</TextBlock>
            <Button x:Name="close" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" BorderBrush="Transparent" FontSize="30" Margin="700,0,0,0" Click="close_Click">X</Button>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" x:Name="MainFrame" Grid.Row="1"></Frame>
    </Grid>
</Window>
